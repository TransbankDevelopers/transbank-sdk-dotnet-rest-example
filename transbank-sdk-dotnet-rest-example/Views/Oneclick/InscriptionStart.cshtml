@{
    ViewBag.Title = "Webpay Oneclick Mall";
}

<h2>@ViewBag.Title</h2>
<h4>Inscription.Start</h4>

<h4>Request:</h4>
<pre style="background-color: lightyellow;">
POST: https://webpay3gint.transbank.cl/rswebpaytransaction/api/oneclick/v1.0/inscriptions
    <code class="json">
    {
        "username": "@ViewBag.UserName",
        "email": "@ViewBag.Email",
        "response_url": "@ViewBag.ResponseURL"
    }
    </code>
</pre>

<h4>Response:</h4>
<pre>
<code>
@ViewBag.Result
</code>
</pre>

<form name="inscriptionForm" method="post" action="@ViewBag.Action">
    <input type="hidden" name="TBK_TOKEN" id="TBK_TOKEN" value="@ViewBag.Token" />
 </form>

 <a href="javascript: document.inscriptionForm.submit();" class="btn btn-primary">Iniciar Inscripción</a>
 <a href="/" class="btn btn-primary">Volver al Home</a>